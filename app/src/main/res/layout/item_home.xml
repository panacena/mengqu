<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="fill_parent"
                android:layout_height="175.0dip"
                android:layout_marginTop="18.0dip"
                android:background="@color/white_pure" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="35.0dip"
                android:layout_alignBottom="@+id/home_img"
                android:background="@drawable/list_gradient"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/home_great_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginRight="10.0dip"
                    android:text="dd"
                    android:textColor="@color/white2"
                    android:textSize="14.0sp" />

                <ImageView
                    android:id="@+id/home_great"
                    android:layout_width="18.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3.0dip"
                    android:layout_toLeftOf="@+id/home_great_number"
                    android:src="@drawable/liked_gray2x" />

                <TextView
                    android:id="@+id/home_icon_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layout_toLeftOf="@+id/home_great"
                    android:text="d"
                    android:textColor="@color/white2"
                    android:textSize="14.0sp" />

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3.0dip"
                    android:layout_toLeftOf="@+id/home_icon_number"
                    android:src="@drawable/pic" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/layout_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15.0dip"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="65.0dip"
                    android:layout_height="65.0dip" />

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="65.0dip"
                    android:layout_height="65.0dip"
                    android:gravity="center"
                    android:text="\ 1"
                    android:textColor="@color/white2"
                    android:textSize="@dimen/main_text_size_large" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_pure"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:paddingBottom="2.0dip"
                android:paddingLeft="2.0dip"
                android:singleLine="true"
                android:textColor="@color/txt_title"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/black_margin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>